{
  "model": {
    "name": "ai21labs/AI21-Jamba-1.5-Reasoning-3B",
    "quantization": "4bit",
    "max_seq_length": 2048,
    "load_in_4bit": true,
    "bnb_4bit_quant_type": "nf4",
    "bnb_4bit_compute_dtype": "bfloat16",
    "bnb_4bit_use_double_quant": true,
    "trust_remote_code": true
  },
  "lora": {
    "r": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.1,
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj"
    ],
    "bias": "none",
    "task_type": "CAUSAL_LM"
  },
  "training": {
    "batch_size": 6,
    "gradient_accumulation_steps": 6,
    "epochs": 3,
    "learning_rate": 2e-4,
    "lr_scheduler_type": "cosine",
    "warmup_ratio": 0.03,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0,
    "bf16": true,
    "gradient_checkpointing": true,
    "dataloader_num_workers": 4,
    "logging_steps": 25,
    "save_steps": 500,
    "save_total_limit": 3,
    "eval_steps": 500,
    "evaluation_strategy": "steps",
    "optim": "adamw_torch",
    "group_by_length": true,
    "packing": false
  },
  "dataset": {
    "path": "output/completed_datasets/mega_dataset_combined.jsonl",
    "format": "chatml",
    "train_split": 0.95,
    "eval_split": 0.05
  }
}

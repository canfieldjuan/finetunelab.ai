# NPM Configuration
# Security-focused settings

# Always verify package signatures
audit=true

# Fail on audit warnings
audit-level=moderate

# Don't save exact versions (allows security patches)
save-exact=false

# Use package-lock.json for reproducible builds
package-lock=true

# Prefer secure registry
registry=https://registry.npmjs.org/

# Don't allow deprecated packages
allow-deprecated=false

{
  "model": {
    "name": "Qwen/Qwen2.5-Coder-4B-Instruct",
    "device_map": "auto",
    "torch_dtype": "bfloat16",
    "trust_remote_code": true,
    "max_seq_length": 2048
  },
  "training": {
    "method": "sft",
    "use_lora": true,
    "num_epochs": 3,
    "batch_size": 8,
    "gradient_accumulation_steps": 4,
    "learning_rate": 2e-4,
    "lr_scheduler_type": "cosine",
    "warmup_ratio": 0.03,
    "warmup_steps": 100,
    "max_length": 2048,
    "bf16": true,
    "fp16": false,
    "optim": "paged_adamw_8bit",
    "gradient_checkpointing": true,
    "logging_steps": 25,
    "save_steps": 500,
    "eval_steps": 500,
    "save_total_limit": 3,
    "evaluation_strategy": "steps",
    "group_by_length": true,
    "packing": true,
    "dataloader_num_workers": 4,
    "max_grad_norm": 1.0,
    "weight_decay": 0.01,
    "tokenizer_padding_side": "right",
    "lora_config": {
      "r": 16,
      "lora_alpha": 32,
      "lora_dropout": 0.1,
      "bias": "none",
      "task_type": "CAUSAL_LM",
      "target_modules": [
        "q_proj",
        "k_proj",
        "v_proj",
        "o_proj",
        "gate_proj",
        "up_proj",
        "down_proj"
      ]
    },
    "quantization": {
      "load_in_4bit": true,
      "bnb_4bit_quant_type": "nf4",
      "bnb_4bit_compute_dtype": "bfloat16",
      "bnb_4bit_use_double_quant": true
    }
  },
  "data": {
    "train_split": 0.95,
    "eval_split": 0.05
  },
  "dataset_path": "output/completed_datasets/mega_dataset_combined.jsonl"
}
